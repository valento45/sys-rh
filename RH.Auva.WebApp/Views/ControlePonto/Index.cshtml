@using RH.Auva.Application.Models.Departamento;
@model ImportacaoPontoDepartamentoViewModel;

<div class="container-fluid mt-5">

    <h2>Importar folha de ponto</h2>
    <hr />


    <div class="row">

        <button class="btn btn-close-white" data-toggle="tooltip" title="Novo departamento" style="width: 40px; margin-left: 5px;"
                onclick="javascript:window.location.href='../Departamento/Incluir'">
        </button>

    </div>


    <form asp-action="Importar" asp-controller="ControlePonto" method="post" enctype="multipart/form-data">
        <div style="width: 100%;" class="mt-5">
            <input id="campoArquivo" asp-for="File"  multiple="multiple" size="100" />
            
            <br />
            <button class="btn btn-dark btn-black-hover mt-5" style="text-align: center;" type="submit">Importar</button>
        </div>
    </form>
</div>


@section Scripts{
    <script src="~/js/Ponto/importacao.js" asp-append-version="true"></script>
}